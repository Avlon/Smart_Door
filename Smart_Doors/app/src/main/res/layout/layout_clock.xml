<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLoginBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lock_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="开锁界面"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">
            <ImageView
                android:src="@drawable/login_pwa"
                android:layout_marginLeft="50dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@color/colorLoginText"
                android:text="|" />
            <EditText
                android:hint="开锁密码"
                android:textColorHint="@color/colorLoginText"
                android:background="@null"
                android:id="@+id/open_pwd"
                android:layout_marginRight="50dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/dash_line"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <Button
            android:gravity="center"
            android:text="开锁"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/open_but_bg"
            android:id="@+id/open_lock"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

</LinearLayout>